<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to pat(:list), url(:channels, :index) %></li>
      <!--<li><%= link_to pat(:new), url(:channels, :new) %></li> -->
    </ul>
  </div>
  <div class="content">
    <h2 class="title"><%= pat(:all) %> <% mt(:channels) %></h2>
    <div class="inner">
      <table class="table">
        <tr>
          <th class="first"><%= mat(:channel, :name) %></th>
          <th><%= mat(:channel, :mode) %></th>
          <th><%= mat(:channel, :updated_at) %></th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @channels.each do |channel| %>
        <tr>
          <td class="first"><%= channel.name %></td>
          <td><%= channel.mode %></td>
          <td><%= channel.updated_at %></td>
          <td class="last">
            <%= button_to pat(:edit), url(:channels, :edit, :id => channel.id), :method => :get, :class => :button_to %> |
            <%= button_to pat(:delete), url(:channels, :destroy, :id => channel.id), :method => :delete, :class => :button_to, :onsubmit => "return confirm('#{pat(:confirm)}')" %>
          </td>
        </tr>
        <% end %>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions"></div>
      </div>
    </div>
  </div>
</div>
<% content_for :sidebar, partial("base/sidebar") %>
